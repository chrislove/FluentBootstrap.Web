@using FluentBootstrap

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
        <title>FluentBootstrap - @Page.Title</title>
        <meta name="description" content="FluentBootstrap provides extensions, helper classes, model binding, and other goodies to help you use the Bootstrap CSS framework from .NET code." />
        <meta name="keywords" content="ASP.NET,MVC,ASP.NET MVC,C#,HTML,HtmlHelpers,Web Development,Bootstrap,Twitter Bootstrap,CSS" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
        <link href="~/Content/prettify.css" rel="stylesheet" />
        <link href="~/Content/github.css" rel="stylesheet" />
        <link href="~/Content/master.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>  
        <script src="~/Scripts/prettify.js"></script>           
        @RenderSection("head", required: false)
    </head>
    <body onload="prettyPrint()">        
        @using (var navbar = Html.Bootstrap(this).Navbar().SetPosition(NavbarPosition.StaticTop).SetFluid(false).AddStyle("margin-bottom", "0px").SetId("top").Begin())
        {
            using (navbar.NavbarHeader().Begin())
            {
                using(navbar.Brand(null, "/").Begin())
                {
                    <text>@Html.Bootstrap(this).Image("/Content/fb-icon-20px.png")</text>
                }
                using (navbar.Brand(null, "/").Begin())
                {
                    <text> FluentBootstrap</text>
                }
            }
            @navbar.NavbarLink("Getting Started", "/GettingStarted").SetActive(Context.Request.Url.PathAndQuery.StartsWith("/GettingStarted"))
            @navbar.NavbarLink("CSS", "/CSS").SetActive(Context.Request.Url.PathAndQuery.StartsWith("/CSS"))
            @navbar.NavbarLink("Components", "/Components").SetActive(Context.Request.Url.PathAndQuery.StartsWith("/Components"))
            @navbar.NavbarLink("Extras", "/Extras").SetActive(Context.Request.Url.PathAndQuery.StartsWith("/Extras"))
            @navbar.NavbarLink("Development", "/Development").SetActive(Context.Request.Url.PathAndQuery.StartsWith("/Development"))
            @navbar.NavbarLink("GitHub", "https://github.com/somedave/FluentBootstrap")
        }
        @using (Html.Bootstrap(this).Jumbotron().Begin())
        {
            using(Html.Bootstrap(this).Container().Begin())
            {
                string heading = Page.Heading ?? Page.Title;
                @Html.Bootstrap(this).Heading1(heading)
                if(Page.Lead != null)
                {
                    <p>@Html.Raw(Page.Lead)</p>
                }
            }
        }
        @using(Html.Bootstrap(this).Container().Begin())
        {
            @RenderBody()
            @Html.Bootstrap(this).PageHeader("Help!")
            <p>The best way to get help is to post a question on @Html.Bootstrap(this).Link("StackOverflow", "http://www.stackoverflow.com") with the <strong>FluentBootstrap</strong> tag. If you find a bug, @Html.Bootstrap(this).Link("open an issue on GitHub", "https://github.com/somedave/FluentBootstrap/issues"). You can also tweet or follow @Html.Bootstrap(this).Link("@somedaveg", "https://twitter.com/somedaveg") with questions or for announcements.</p>
        }
        <hr />
        @using(Html.Bootstrap(this).Container().Begin())
        {
            <p>FluentBootstrap is crafted by @Html.Bootstrap(this).Link("Dave Glick", "http://www.somedave.com"). Code on @Html.Bootstrap(this).Link("GitHub", "https://github.com/somedave/FluentBootstrap").</p>
        }
        <p></p>       

        <script>
            var $window = $(window);
            var $body = $(document.body);

            $body.scrollspy({ target: '#sidebar-nav' });

            $window.on('load', function () {
                $body.scrollspy('refresh');

                var $sidebar = $('#sidebar');
                if ($sidebar.length !== 0) {
                    $sidebar.affix({
                        offset: {
                            top: $sidebar.offset().top - 20
                        }
                    });

                    $sidebar.width($sidebar.parent().width());
                }
            });
        </script>

        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-54470483-2', 'auto');
            ga('send', 'pageview');

        </script>

    </body>
</html>
