@using FluentBootstrap

@{
    Page.Title = "CSS";
    Layout = "_Layout.cshtml";
}

<style>
    .demo-grid {
        margin-bottom: 6px;
    }

    .demo-grid > div[class^="col-"] {
        background-color: #999;
        border-radius: 6px;
        border: 1px white solid;
        color: white;
    }
</style>

@using (var outerRow = Html.Bootstrap(this).GridRow().Begin())
{
    using (outerRow.GridColumn(9).SetSm(12).Begin())
    {
        using(Html.Bootstrap(this).Lead().Begin())
        {
            <text>This section explains functionality related to existing standard HTML elements like tables and forms but with additional styling and capabilities. FluentBootstrap implements all CSS support from Bootstrap. For more information @Html.Bootstrap(this).Link("see the Bootstrap documentation", "http://getbootstrap.com/css/").</text>
        }

        @Html.Bootstrap(this).PageHeader("Grids").SetId("grids")
        @RenderPage("/Sections/CSS/Grids.cshtml")    

        @Html.Bootstrap(this).PageHeader("Typography").SetId("typography")
        @RenderPage("/Sections/CSS/Typography.cshtml")

        @Html.Bootstrap(this).PageHeader("Lists").SetId("lists")
        @RenderPage("/Sections/CSS/Lists.cshtml")
    
        @Html.Bootstrap(this).PageHeader("Tables").SetId("tables")
        @RenderPage("/Sections/CSS/Tables.cshtml")
    
        @Html.Bootstrap(this).PageHeader("Forms").SetId("forms")
        @RenderPage("/Sections/CSS/Forms.cshtml")

        @Html.Bootstrap(this).PageHeader("Buttons").SetId("buttons")
        @RenderPage("/Sections/CSS/Buttons.cshtml")

        @Html.Bootstrap(this).PageHeader("Images").SetId("images")
        @RenderPage("/Sections/CSS/Images.cshtml")

        @Html.Bootstrap(this).PageHeader("Miscellaneous").SetId("miscellaneous")
        @RenderPage("/Sections/CSS/Miscellaneous.cshtml")
    }
    using (outerRow.GridColumn(3).SetVisibility(Visibility.HiddenSm | Visibility.HiddenXs).Begin())
    {
        <div id="sidebar">
            <div id="sidebar-nav">
                @using (var pills = Html.Bootstrap(this).Pills().SetStacked().Begin())
                {
                    @pills.Pill("Grids", "#grids")
                    @pills.Pill("Typography", "#typography")
                    @pills.Pill("Lists", "#lists")
                    @pills.Pill("Tables", "#tables")
                    @pills.Pill("Forms", "#forms")
                    @pills.Pill("Buttons", "#buttons")
                    @pills.Pill("Images", "#images")
                    @pills.Pill("Miscellaneous", "#miscellaneous")
                }
            </div>            
            @using (var pills = Html.Bootstrap(this).Pills().SetStacked().Begin())
            {
                @pills.Pill("Back to top", "#top").MakeSmall()
            }
        </div>
    }
}

